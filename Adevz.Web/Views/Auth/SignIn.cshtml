@model Adevz.Web.Models.Auth.SignInModel

@{
    Layout = "~/Views/Shared/Register/_layoutlogin.cshtml";
}
@if(!ViewContext.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="form-validation"></div>
}
 
<form class="form-signin" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]">
    <h2>Please sign in</h2>
    <label class="sr-only">Username</label>
    <input type="text" class="form-control" placeholder="Username"
           asp-for="Username"/>
    <label class="sr-only">Password</label>
    <input type="password" class="form-control" placeholder="Password" 
           asp-for="Password"/>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
</form>


       <!-- Login Form -->
<form id="form-login" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" class="form-horizontal form-signin">
    <div class="form-group">
        <div class="col-xs-12">
            <input type="text"  name="login-email" class="form-control " placeholder="Username"  asp-for="Username">
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <input type="password"  name="login-password" class="form-control" placeholder="Your password.."  asp-for="Password">
        </div>
    </div>
    <div class="form-group form-actions">
        <div class="col-xs-8">
            <label class="csscheckbox csscheckbox-primary">
                <input type="checkbox" id="login-remember-me" name="login-remember-me">
                <span></span>
            </label>
            Remember Me?
        </div>
        <div class="col-xs-4 text-right">
            <button type="submit" class="btn btn-effect-ripple btn-sm btn-primary"><i class="fa fa-check"></i> Login</button>
        </div>
    </div>
</form>
<!-- END Login Form -->

